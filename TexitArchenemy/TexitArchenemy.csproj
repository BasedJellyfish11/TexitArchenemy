<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>10</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Discord.Net" Version="3.1.0" />
      <PackageReference Include="JetBrains.Annotations" Version="10.2.1" />
      <PackageReference Include="SixLabors.ImageSharp.Drawing" Version="1.0.0-beta13" />
      <PackageReference Include="System.Data.SqlClient" Version="4.8.3" />
      <PackageReference Include="TweetinviAPI" Version="5.0.4" />
    </ItemGroup>  
    
    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <CreateItem Include="$(SolutionDir)Skeletons\*.*">
            <Output TaskParameter="Include" ItemName="SourceFiles" />
        </CreateItem>
        <Copy SourceFiles="@(SourceFiles)" DestinationFolder="$(TargetDir)/Skeletons" />
        <Exec Command="@echo on" />
        <Exec Command="echo Copying skeletons folder" />
    </Target>

</Project>
